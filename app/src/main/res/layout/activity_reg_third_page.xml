<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".activities.RegThirdPageActivity">

    <Spinner
        android:id="@+id/religion_spinner"
        android:layout_marginTop="70dp"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>
    <Spinner
        android:id="@+id/Ethincity_spinner"
        android:layout_marginTop="20dp"
        android:layout_below="@id/religion_spinner"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>
    <Spinner
        android:id="@+id/fathers_city_spinner"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Ethincity_spinner"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>
    <Spinner
        android:id="@+id/mothers_city_spinner"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fathers_city_spinner"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>


    <Spinner
        android:id="@+id/current_occupation"
        android:layout_marginTop="20dp"
        android:layout_below="@id/mothers_city_spinner"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/other_details_occu_til"
        android:layout_below="@id/current_occupation"
        android:layout_width="match_parent"
        android:alpha="0.5"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/other_details_occu_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#000000"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Other detaisl about your occupation"/>
    </android.support.design.widget.TextInputLayout>
    <Spinner
        android:id="@+id/higest_level_edu_spinner"
        android:layout_marginTop="20dp"
        android:layout_below="@id/other_details_occu_til"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>

    <Button
        android:id="@+id/btn_next"
        android:text="NEXT"
        android:layout_below="@+id/higest_level_edu_spinner"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/blue_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/have_account_tv"
        android:layout_below="@id/btn_next"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:text="Already have an account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_here"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/have_account_tv"
        android:text="Login Here."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>