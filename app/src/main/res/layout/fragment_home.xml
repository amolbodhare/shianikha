        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/purplebtnback"
            android:layout_alignParentTop="true"
            android:layout_height="280dp">
            <ImageView
                android:src="@drawable/aaaaaa"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="280dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dash_tv"
                    android:text="DASHBOARD"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_centerHorizontal="true"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/notification"
                        android:clickable="true"
                        android:padding="13dp"
                        android:src="@drawable/ic_notifications_none_black_24dp" />

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:text="01"
                        android:maxLength="2"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/clickable_grey_circle"/>

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        
        <LinearLayout
            android:id="@+id/design_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_marginLeft="17dp"
                android:background="@drawable/card_back_design"
                android:orientation="vertical"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="102"
                    android:textColor="@color/textpurle2"
                    android:textSize="21dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="My Matches"
                    android:textSize="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/card_back_design"
                android:orientation="vertical"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="50"
                    android:textColor="@color/textpurle2"
                    android:textSize="21dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Profile Visitors"
                    android:textSize="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/card_back_design"
                android:orientation="vertical"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="30"
                    android:textColor="@color/textpurle2"
                    android:textSize="21dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Express Interest"
                    android:textSize="10dp" />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>