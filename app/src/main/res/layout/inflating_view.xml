<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp">


    <RelativeLayout
        android:id="@+id/active_members_link_layout"
        android:layout_width="match_parent"
        android:layout_marginBottom="17dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sub_menu_link_tv"
            android:text="Active Members"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/text_back_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:background="@drawable/ic_bg_img" />

        <View
            android:background="@color/border_grey"
            android:layout_marginTop="5dp"
            android:layout_below="@id/sub_menu_link_tv"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


</RelativeLayout>
