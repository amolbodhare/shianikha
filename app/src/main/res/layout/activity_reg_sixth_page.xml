<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.RegSixthPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Perfered Match"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="28dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Preferred Match"
                android:textColor="@color/textpurle"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/und_view"
                    android:background="@color/colorAccent"
                    android:layout_width="40dp"
                    android:layout_height="3dp"/>

                <View
                    android:background="@color/colorAccent"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:layout_width="5dp"
                    android:layout_height="3dp"/>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="Preferred Match Age should be minimum "
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <Spinner
                    android:id="@+id/min_age_spinner"
                    android:alpha="0.5"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="4"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="25dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="2"
                    android:layout_marginTop="45dp"/>
                <Spinner
                    android:id="@+id/max_age_spinner"
                    android:alpha="0.5"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="4"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="25dp"/>

            </LinearLayout>

           <!-- <Spinner
                android:id="@+id/pref_match_status_spinner"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:alpha="0.5" />
-->
            <RelativeLayout
                android:id="@+id/pref_match_status_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Select languages"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>


            <!--<Spinner
                android:id="@+id/pref_match_ethnicity_spinner"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp" />-->
            <RelativeLayout
                android:id="@+id/pref_match_ethnicity_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_ethnicity_spinner_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Select languages"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>

            <!--<Spinner
                android:id="@+id/pref_match_min_education_spinner"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp" />-->
            <RelativeLayout
                android:id="@+id/pref_match_min_education_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_min_education_spinner_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Select languages"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email me request for every one"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"
                android:buttonTint="@color/bluebtnback"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15dp"
                android:text="Email me requests form Preferred Matches ONLY"
                android:checked="true"
                android:buttonTint="@color/bluebtnback"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14dp"
                android:text="@string/terms_conditions"
                android:buttonTint="@color/bluebtnback"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"/>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Register"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:background="@drawable/blue_button_back"/>


            <TextView
                android:id="@+id/have_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Already have an account"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/login_here"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Login Here."
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>