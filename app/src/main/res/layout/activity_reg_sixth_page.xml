<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegSixthPageActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pref_match_tv_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Perfered Match"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pref_match_tv_big"
                android:layout_below="@id/pref_match_tv_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="28dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Preferred Match"
                android:textColor="@color/textpurle"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/und_layout"
                android:layout_below="@id/pref_match_tv_big"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/und_view"
                    android:background="@color/colorAccent"
                    android:layout_width="40dp"
                    android:layout_height="3dp"/>

                <View
                    android:background="@color/colorAccent"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:layout_width="5dp"
                    android:layout_height="3dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/pref_match_age_tv"
                android:layout_below="@id/und_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="Preferred Match Age should be minimum "
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/age_layout"
                android:layout_below="@id/pref_match_age_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <RelativeLayout
                    android:id="@+id/min_age_spinner_layout"
                    android:layout_width="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="4.5"
                    android:layout_marginLeft="25dp"
                    android:layout_height="56dp">

                    <EditText
                        android:id="@+id/min_age_spinner_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="ethinicity"
                        android:gravity="center"
                        android:focusable="false"
                        android:paddingRight="56dp" />

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="11dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="#bdbdbd" />
                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginTop="45dp"/>
                <!--<Spinner
                    android:id="@+id/max_age_spinner"
                    android:alpha="0.5"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="4"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="25dp"/>-->
                <RelativeLayout
                    android:id="@+id/max_age__spinner_layout"
                    android:layout_width="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="4.5"
                    android:layout_marginLeft="25dp"
                    android:layout_height="56dp">

                    <EditText
                        android:id="@+id/max_age_spinner_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="ethinicity"
                        android:gravity="center"
                        android:focusable="false"
                        android:paddingRight="56dp" />

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="11dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="#bdbdbd" />
                </RelativeLayout>

            </LinearLayout>

           <!-- <Spinner
                android:id="@+id/pref_match_status_spinner"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:alpha="0.5" />
-->
            <RelativeLayout
                android:id="@+id/pref_match_status_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Prefered match Marital status"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>


            <!--<Spinner
                android:id="@+id/pref_match_ethnicity_spinner"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp" />-->
            <RelativeLayout
                android:id="@+id/pref_match_ethnicity_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_ethnicity_spinner_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ethinicity"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>

            <!--<Spinner
                android:id="@+id/pref_match_min_education_spinner"
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp" />-->
            <RelativeLayout
                android:id="@+id/pref_match_min_education_spinner_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="25dp"
                android:layout_height="56dp">

                <EditText
                    android:id="@+id/pref_match_min_education_spinner_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Minimum education"
                    android:gravity="center"
                    android:focusable="false"
                    android:paddingRight="56dp" />

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="#bdbdbd" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/islam_convert_rdg"
                android:layout_marginTop="33dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rb_email_everyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Email me request for every one"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_email_me_from_pref_match_only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Email me request from Preferred Matches ONLY" />

                <RadioButton
                    android:id="@+id/rb_check_for_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="check this box to attest by the sanctity of the Holy Quran that(1) all information that you have provided in this form is ttrue to your best of your knowledge,(2) you agree to our Terms of use and (3) you are atleast 18 years of age " />

            </RadioGroup>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="SUBMIT"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:background="@drawable/blue_button_back"/>


            <TextView
                android:id="@+id/have_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Already have an account"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/login_here"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Login Here."
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/includeContainer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:elevation="7dp"
            android:translationX="300dp">

            <include
                layout="@layout/custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:visibility="gone"/>

</RelativeLayout>