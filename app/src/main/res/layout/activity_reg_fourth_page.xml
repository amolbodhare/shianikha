<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegFourthPageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/aaaaaa" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/disabilityAny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/disability"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:paddingRight="56dp"
                    android:text="Disability, if any"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/disabilityGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yesDisable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:buttonTint="#5C5CFE"
                        android:text="Yes"
                        android:tag="1"
                        android:textColor="#707070" />

                    <RadioButton
                        android:id="@+id/noDisable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="0"
                        android:checked="true"
                        android:buttonTint="#5C5CFE"
                        android:text="No"
                        android:textColor="#707070" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Namaz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/disabilityAny"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/namazText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:paddingRight="56dp"
                    android:text="Namaz"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/namazGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yesNamaz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="1"
                        android:buttonTint="#5C5CFE"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="#707070" />

                    <RadioButton
                        android:id="@+id/noNamaz"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="0"
                        android:buttonTint="#5C5CFE"
                        android:text="No"
                        android:textColor="#707070" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rozaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Namaz"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/rozaText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:paddingRight="56dp"
                    android:text="Roza"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rozaGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yesRoza"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="1"
                        android:buttonTint="#5C5CFE"
                        android:checked="true"
                        android:text="Yes"
                        android:textColor="#707070" />

                    <RadioButton
                        android:id="@+id/noRoza"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="0"
                        android:buttonTint="#5C5CFE"
                        android:text="No"
                        android:textColor="#707070" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/HijabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rozaLayout"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/HijabText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:text="Hijab Preference"
                    android:textColor="#707070"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/hijabGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yesHijab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="1"
                        android:buttonTint="#5C5CFE"
                        android:text="Yes"
                        android:textColor="#707070" />

                    <RadioButton
                        android:id="@+id/noHijab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:tag="0"
                        android:checked="true"
                        android:buttonTint="#5C5CFE"
                        android:text="No"
                        android:textColor="#707070" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/familyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HijabLayout"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Family Details"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/familyRadioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/familyLayout"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioGroup
                    android:id="@+id/familyDetailsGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/jointRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:buttonTint="#5C5CFE"
                        android:checked="true"
                        android:text="Joint Family"
                        android:tag="1"
                        android:textColor="#707070" />

                    <RadioButton
                        android:id="@+id/nuclearRadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:buttonTint="#5C5CFE"
                        android:text="Nuclear Family"
                        android:tag="2"
                        android:textColor="#707070" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailsOfParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/familyRadioLayout"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fatherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Father's Name"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="25dp">

                    <EditText
                        android:id="@+id/fatherOccupationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Father occupation"
                        android:paddingRight="56dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="#bdbdbd" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fathersOccupationInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="17dp">

                    <EditText
                        android:id="@+id/other_details_fathers_occupation_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Father's Other Occupation" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/motherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Mother's Name"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="25dp">

                    <EditText
                        android:id="@+id/motherOccupationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Mother occupation"
                        android:paddingRight="56dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="#bdbdbd" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mothersOccupationInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="17dp">

                    <EditText
                        android:id="@+id/other_details_mothers_occupation_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:hint="Mother's Other Occupation" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/numberSibilings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Number of Sibilings"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/parentContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Parent / Alternative Contact No"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/detailsOfParent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/blue_button_back"
                android:fontFamily="@font/poppins_regular"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/includeContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:elevation="7dp"
        android:translationX="300dp">

        <include
            layout="@layout/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" />

</RelativeLayout>