<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".activities.RegFourthPageActivity">
    <Spinner
        android:id="@+id/lang_spinner"
        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>
    <Spinner
        android:id="@+id/habbit_spinner"
        android:layout_marginTop="15dp"
        android:layout_below="@id/lang_spinner"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/other_details_occu_til"
        android:layout_below="@id/habbit_spinner"
        android:layout_width="match_parent"
        android:alpha="0.5"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/other_details_occu_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#000000"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Willing To relocate"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/islam_convert_tv"
        android:text="Did you convert to Islam?"
        android:layout_below="@id/other_details_occu_til"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/islam_convert_rdg"
        android:orientation="horizontal"
        android:layout_below="@id/islam_convert_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/islam_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />

        <RadioButton
            android:id="@+id/islamm_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/syed_tv"
        android:text="Are you a Syed?"
        android:layout_below="@id/islam_convert_rdg"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/Syed_rdg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/syed_tv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/syed_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />

        <RadioButton
            android:id="@+id/syed_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/handicap_tv"
        android:text="Are you handicap/major disabilities?"
        android:layout_below="@id/Syed_rdg"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/handicap_rdg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/handicap_tv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/handicap_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />

        <RadioButton
            android:id="@+id/handicap_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/children_tv"
        android:text="Do you have children?"
        android:layout_below="@id/handicap_rdg"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/children_rdg"
        android:layout_marginTop="10dp"
        android:layout_below="@id/children_tv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/children_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true" />

        <RadioButton
            android:id="@+id/children_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:text="NEXT"
        android:layout_below="@+id/children_rdg"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/blue_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/have_account_tv"
        android:layout_below="@id/btn_next"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Already have an account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_here"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/have_account_tv"
        android:text="Login Here."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>