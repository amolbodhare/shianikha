<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartnerPreference">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:paddingTop="25dp"
        android:text="AGE"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textMin1"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>
        <TextView
            android:id="@+id/textMax1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/age_rangeSeekbar"
        android:layout_marginTop="20dp"
        app:bar_highlight_color="@color/seekbar_color"
        app:left_thumb_color="@color/seekbar_color"
        app:right_thumb_color="@color/seekbar_color"
        app:min_value="18"
        app:min_start_value="20"
        app:max_value="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/marital_Status_spinner_laout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="17dp">

        <EditText
            android:id="@+id/marital_Status_spinner_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="Preferred Match marital status"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="#bdbdbd" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ethincity_spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="17dp">

        <EditText
            android:id="@+id/ethincity_spinner_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="Preferred Match ethnicity"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="#bdbdbd" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/minE_education_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="17dp">

        <EditText
            android:id="@+id/min_edu_spinner_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="Minimum Education"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="#bdbdbd"/>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/syedRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/yesSyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:buttonTint="#5C5CFE"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/notSyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#5C5CFE"
            android:text="No" />

        <RadioButton
            android:id="@+id/donnKnowSyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#5C5CFE"
            android:text="Don't know" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/image_ll"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button_back"
        android:fontFamily="@font/poppins_regular"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/includeContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:elevation="7dp"
        android:translationX="300dp">

        <include
            layout="@layout/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" />

</RelativeLayout>