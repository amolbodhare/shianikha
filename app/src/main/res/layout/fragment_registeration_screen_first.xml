<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".fragments.RegisterationScreenFirst">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/sub_title"
        android:text="Create An Account"
        android:textStyle="bold"
        android:textColor="@color/textlightgray"
        android:layout_marginTop="80dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title"
        android:text="Regisration"
        android:layout_below="@id/sub_title"
        android:textStyle="bold"
        android:textColor="@color/textpurle"
        android:textSize="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title"
        android:layout_width="fill_parent"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/full_name_til"
        android:layout_below="@id/spinner"
        android:layout_width="match_parent"
        android:alpha="0.5"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#000000"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Full Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_til"
        android:layout_below="@id/full_name_til"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#000000"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Email address"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/mobile_no_til"
        android:layout_below="@id/email_til"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:typeface="monospace"
            android:textColor="#000000"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Mobile No"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/gender"
        android:hint="Gender"
        android:textSize="18dp"
        android:alpha="0.5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mobile_no_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/image_ll"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/gender"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:text="NEXT"
        android:textSize="20dp"
        android:layout_below="@id/image_ll"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/have_account_tv"
        android:layout_below="@id/btn_next"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:text="Already have an account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_here"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@id/have_account_tv"
        android:text="Login Here."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>