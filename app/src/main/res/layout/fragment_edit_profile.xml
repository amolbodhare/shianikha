<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subfragments.EditProfileFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      <RelativeLayout
          android:id="@+id/main_layout"
          android:layout_width="match_parent"
          android:background="@color/dashboard_card_back_color"
          android:layout_alignParentTop="true"
          android:layout_height="170dp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="170dp"
              android:layout_marginStart="0dp"
              android:scaleType="fitXY"
              android:src="@drawable/aaaaaa" />

          <FrameLayout
              android:id="@+id/cir_imv_frame_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/image_profile_pic"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:src="@drawable/kangna" />

          </FrameLayout>


          <ImageView
          android:id="@+id/imageView"
          android:layout_marginTop="120dp"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_centerHorizontal="true"
          android:background="@drawable/add_profile_circle_button_back"
          android:padding="8dp"
          android:src="@drawable/add_profile_icon" />

      </RelativeLayout>

          <RelativeLayout
              android:layout_below="@id/main_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

      <RelativeLayout
          android:id="@+id/profile_for_Layout"
