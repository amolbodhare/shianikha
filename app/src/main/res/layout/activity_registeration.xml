<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp">

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Create An Account"
                    android:textColor="@color/textlightgray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_title"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Registration"
                    android:textColor="@color/textpurle"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/und_view"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_below="@id/title"
                    android:background="@color/colorAccent" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="3dp"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/und_view"
                    android:background="@color/colorAccent" />

                <!-- <Spinner
                     android:id="@+id/spinner"
                     android:layout_marginTop="17dp"
                     android:layout_below="@id/und_view"
                     android:layout_width="fill_parent"
                     android:alpha="0.5"
                     android:layout_height="wrap_content"
                     android:prompt="@string/spinner_title"/>-->

                <RelativeLayout
                    android:id="@+id/profile_for_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_below="@id/und_view"
                    android:layout_marginTop="17dp">

                    <EditText
                        android:id="@+id/profile_for_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Profile For"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:tint="#bdbdbd" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/first_name_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_for_Layout"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:alpha="0.5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="First Name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/middle_name_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_name_til"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:alpha="0.5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/middle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Middle Name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/last_name_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/middle_name_til"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:alpha="0.5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Last Name"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_name_til"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:alpha="0.5"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"
                    android:textSize="16dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Email address"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:typeface="monospace" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_til"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/countryCodeEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="+01"
                        android:imeOptions="actionNext"
                        android:inputType="numberSigned"
                        android:text="+91" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/mobile_no_til"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/countryCode"
                        android:alpha="0.5">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:hint="Mobile No"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:typeface="monospace" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:alpha="0.7"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Gender"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/genderr_male_imv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/reg_img_bg"
                        android:padding="10dp"
                        android:src="@drawable/male" />

                    <ImageView
                        android:id="@+id/genderr_female_imv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/reg_img_bg"
                        android:padding="10dp"
                        android:src="@drawable/female" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/image_ll"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/blue_button_back"
                    android:fontFamily="@font/poppins_regular"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/have_account_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_next"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Already have an account"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/login_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/have_account_tv"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Login Here."
                    android:textColor="@color/text_color"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <!-- Following is for custom spinner-->
    <LinearLayout
        android:id="@+id/includeContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:elevation="7dp"
        android:translationX="300dp">

        <include
            layout="@layout/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" />

</RelativeLayout>