<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/aaaaaa"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="29dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

 <TextView
     android:id="@+id/sub_title"
     android:text="Create An Account"
     android:textStyle="bold"
     android:textColor="@color/textlightgray"
     android:layout_marginTop="43dp"
     android:textSize="12dp"
     android:fontFamily="@font/poppins_medium"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />

 <TextView
     android:id="@+id/title"
     android:text="Registration"
     android:layout_marginTop="6dp"
     android:fontFamily="@font/poppins_medium"
     android:textSize="28dp"
     android:layout_below="@id/sub_title"
     android:textStyle="bold"
     android:textColor="@color/textpurle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />

 <View
     android:id="@+id/und_view"
     android:background="@color/colorAccent"
     android:layout_below="@id/title"
     android:layout_width="40dp"
     android:layout_height="3dp"/>

 <View
     android:background="@color/colorAccent"
     android:layout_below="@id/title"
     android:layout_marginLeft="5dp"
     android:layout_toRightOf="@id/und_view"
     android:layout_width="5dp"
     android:layout_height="3dp"/>

<!-- <Spinner
     android:id="@+id/spinner"
     android:layout_marginTop="17dp"
     android:layout_below="@id/und_view"
     android:layout_width="fill_parent"
     android:alpha="0.5"
     android:layout_height="wrap_content"
     android:prompt="@string/spinner_title"/>-->

    <RelativeLayout
        android:id="@+id/cityLayout"
        android:layout_below="@id/und_view"
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_height="56dp">

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Profile For"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            android:focusable="false"
            android:paddingRight="56dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="11dp"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="#bdbdbd" />

    </RelativeLayout>

 <android.support.design.widget.TextInputLayout
     android:id="@+id/full_name_til"
     android:layout_below="@id/cityLayout"
     android:layout_width="match_parent"
     android:alpha="0.5"
     android:layout_marginTop="10dp"
     android:layout_height="wrap_content"
     android:layout_marginBottom="0dp">

  <android.support.design.widget.TextInputEditText
      android:id="@+id/full_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textSize="16dp"
      android:fontFamily="@font/poppins_regular"
      android:textColor="#000000"
      android:singleLine="true"
      android:imeOptions="actionNext"
      android:hint="Full Name"/>
 </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
     android:id="@+id/email_til"
     android:layout_below="@id/full_name_til"
     android:layout_width="match_parent"
     android:layout_marginTop="10dp"
     android:textSize="16dp"
     android:fontFamily="@font/poppins_regular"
     android:textColor="#000000"
     android:alpha="0.5"
     android:layout_height="wrap_content"
     android:layout_marginBottom="0dp">
  <android.support.design.widget.TextInputEditText
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textSize="16dp"
      android:fontFamily="@font/poppins_regular"
      android:textColor="#000000"
      android:typeface="monospace"
      android:singleLine="true"
      android:imeOptions="actionNext"
      android:hint="Email address"/>
 </android.support.design.widget.TextInputLayout>


 <android.support.design.widget.TextInputLayout
     android:id="@+id/mobile_no_til"
     android:layout_below="@id/email_til"
     android:layout_width="match_parent"
     android:layout_marginTop="10dp"
     android:alpha="0.5"
     android:layout_height="wrap_content"
     android:layout_marginBottom="0dp">
  <android.support.design.widget.TextInputEditText
      android:id="@+id/mobile_no"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:fontFamily="@font/poppins_regular"
      android:textColor="#000000"
      android:inputType="number"
      android:maxLength="10"
      android:typeface="monospace"
      android:singleLine="true"
      android:imeOptions="actionNext"
      android:hint="Mobile No"/>
 </android.support.design.widget.TextInputLayout>

 <LinearLayout
     android:id="@+id/image_ll"
     android:layout_marginTop="10dp"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:layout_below="@id/mobile_no_til"
     android:layout_height="wrap_content">

  <TextView
      android:id="@+id/gender"
      android:hint="Gender"
      android:textSize="16dp"
      android:fontFamily="@font/poppins_regular"
      android:alpha="0.5"
      android:layout_marginTop="10dp"
      android:layout_below="@id/mobile_no_til"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <ImageView
      android:id="@+id/genderr_male_imv"
      android:src="@drawable/male"
      android:layout_width="50dp"
      android:background="@drawable/reg_img_bg"
      android:padding="10dp"
      android:layout_marginLeft="20dp"
      android:layout_height="50dp" />

  <ImageView
      android:id="@+id/genderr_female_imv"
      android:src="@drawable/female"
      android:layout_marginLeft="20dp"
      android:padding="10dp"
      android:layout_width="50dp"
      android:background="@drawable/reg_img_bg"
      android:layout_height="50dp" />

 </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/image_ll"
            android:layout_marginTop="30dp"
            android:background="@drawable/blue_button_back"
            android:fontFamily="@font/poppins_regular"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="20dp" />

 <TextView
     android:id="@+id/have_account_tv"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/btn_next"
     android:layout_marginTop="23dp"
     android:fontFamily="@font/poppins_semibold"
     android:text="Already have an account"
     android:textSize="18dp" />

 <TextView
     android:id="@+id/login_here"
     android:layout_marginTop="5dp"
     android:textSize="18dp"
     android:layout_below="@id/have_account_tv"
     android:fontFamily="@font/poppins_semibold"
     android:text="Login Here."
     android:textStyle="bold"
     android:textColor="@color/black"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/includeContainer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:elevation="7dp"
        android:translationX="300dp">

        <include
            layout="@layout/custom_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone"/>

</RelativeLayout>