<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyActivityFragment"
    android:orientation="vertical"
    android:background="@color/white">
    <!-- three buttons-->

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:baselineAligned="true">

            <LinearLayout
                android:id="@+id/acceptedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:background="@color/textpurle2"
                    android:fontFamily="@font/poppins_regular"
                    android:elevation="7dp"
                    android:text="Accepted"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/acceptedMeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/textview_back_color"
                    android:textColor="@color/textview_grey_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Accepted Me"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/contactedMeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/textview_back_color"
                    android:textColor="@color/textview_grey_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="Contacted Me"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/ihaveContactedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/textview_back_color"
                    android:textColor="@color/textview_grey_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="I Have Contacted"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/whoVisitedMyProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/textview_back_color"
                    android:textColor="@color/textview_grey_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="Who Visited My Profile"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/grey5"/>

            <LinearLayout
                android:id="@+id/profileViewedByMeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/textview_back_color"
                    android:textColor="@color/textview_grey_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:text="Profiles Viewed By Me"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-15dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:tint="@color/textpurle2"/>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"/>

</LinearLayout>