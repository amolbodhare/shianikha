<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nikha.shianikha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.nikha.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true">

        <activity
            android:name="com.nikha.shianikha.activities.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.WriteMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.ReadMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.ImageViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.ImageViewPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.MessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.SubscriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.nikha.shianikha.activities.FilterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.OTPVerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.PerfectMatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegFifthPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegFourthPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegThirdPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegSecondPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.WalkThroughActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nikha.shianikha.activities.RegSixthPageActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.nikha.shianikha.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="dev.digiinterface.com"
                    android:pathPrefix="/2019/shia_nikah/web_services/" />
            </intent-filter>
        </activity>

        <service android:name="com.nikha.MyFCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>